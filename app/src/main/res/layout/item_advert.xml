<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_of_sahibinden"
    android:layout_width="match_parent"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    android:elevation="5dp"
    android:layout_height="125dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/specialOffer_detail_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/special" />


        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/placeHolder_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sahibinden_image" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="24dp">

                        <TextView
                            android:id="@+id/staticTitle_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_of_sahibinden"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="Title: "/>

                        <TextView
                            android:id="@+id/advertTitle_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="adasdas asd asfwwgf  sdgkmsdkl "
                            android:textColor="@color/black_of_sahibinden"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="24dp">

                        <TextView
                            android:id="@+id/staticPrice_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_of_sahibinden"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:text="Price: "/>
                        <TextView
                            android:id="@+id/advertPrice_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_of_sahibinden"
                            android:textSize="16sp"
                            android:text="1250"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_of_sahibinden"
                            android:textSize="16sp"
                            android:layout_marginLeft="3dp"
                            android:text="₺"/>
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom">

                    <ImageView
                        android:id="@+id/mostViewed_iv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="left"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/most_viewed" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_height="wrap_content">



                        <TextView
                            android:id="@+id/town_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bostancı"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / "/>
                        <TextView
                            android:id="@+id/city_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="İstanbul"/>
                    </LinearLayout>


                </FrameLayout>

            </FrameLayout>


        </LinearLayout>
    </FrameLayout>






</android.support.v7.widget.CardView>